<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:id="@+id/layout">
    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sample"
        android:textColor="#121010"
        android:textSize="40dp"
        android:gravity="center"
        android:background="@drawable/rounded_text2"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Option 1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Option 2"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Option 3"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button2"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        />

    <TextView
        android:id="@+id/output"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#F63838"
        android:textSize="30sp"
        android:typeface="serif"
        android:background="@drawable/rounded_text"
        />
    <TextView
        android:id="@+id/output2"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/output"
        android:textColor="#F63838"
        android:textSize="20sp"
        android:typeface="serif"
        android:background="@drawable/rounded_text"
        />
    <Button
        android:id="@+id/trybtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/output2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_retry"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="45dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:textColor="#EDE8E7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/rounded_text3"
        android:textSize="30sp" />

    <TextView
    android:id="@+id/Scoreboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:layout_marginEnd="75dp"
    android:layout_toStartOf="@+id/button1"
    android:text="0"
    android:textSize="30dp" />

    <TextView
        android:id="@+id/highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/button1"
        android:text="0"
        android:textSize="30dp" />

    <TextView
        android:layout_width="164dp"
        android:layout_height="29dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="-3dp"
        android:layout_toStartOf="@+id/button1"
        android:background="@drawable/rounded_text4"
        android:text="Winning Streak"
        android:gravity="center"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="164dp"
        android:layout_height="29dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/button1"
        android:background="@drawable/rounded_text4"
        android:gravity="center"
        android:text="High Score"
        android:textSize="20dp" />


</RelativeLayout>